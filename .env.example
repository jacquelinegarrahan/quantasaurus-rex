# =================================================================
# Quantasaurus-Rex Environment Configuration
# =================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =================================================================
# AWS Configuration
# =================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=quantasaurus-rex-data

# =================================================================
# Robinhood API Configuration
# =================================================================
ROBINHOOD_USERNAME=your_robinhood_username
ROBINHOOD_PASSWORD=your_robinhood_password
ROBINHOOD_MFA_CODE=your_mfa_code_for_sheriff_challenge
# Device approval settings
ROBINHOOD_DEVICE_APPROVAL_DELAY=30
ROBINHOOD_MAX_AUTH_RETRIES=3
# Optional: Custom device storage path (defaults to ~/.quantasaurus/robinhood_device.json)
# ROBINHOOD_DEVICE_STORAGE_PATH=/path/to/custom/storage.json

# =================================================================
# API Keys
# =================================================================
OPENAI_API_KEY=your_openai_api_key
TAVILY_API_KEY=your_tavily_api_key

# =================================================================
# Aiera API Configuration
# =================================================================
AIERA_API_KEY=your_aiera_api_key
AIERA_API_URL=http://localhost:8000/api
AIERA_API_TIMEOUT=30

# =================================================================
# Email Configuration
# =================================================================
FROM_EMAIL=quantasaurus-rex@yourdomain.com
TO_EMAIL=jacquelinegarrahan@gmail.com
SES_REGION=us-east-1
EMAIL_SUBJECT_PREFIX=[Quantasaurus-Rex]

# =================================================================
# Analysis Configuration
# =================================================================
ANALYSIS_LOOKBACK_DAYS=90
CONFIDENCE_THRESHOLD=60
MAX_RECOMMENDATIONS=20
ENABLE_CRYPTO_ANALYSIS=true
ENABLE_STOCK_ANALYSIS=true

# =================================================================
# Risk Management
# =================================================================
MAX_POSITION_SIZE_PERCENT=10
PORTFOLIO_RISK_LIMIT=0.20
VOLATILITY_THRESHOLD=0.30

# =================================================================
# Logging and Monitoring
# =================================================================
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=false
CLOUDWATCH_LOG_GROUP=/aws/lambda/quantasaurus-rex

# =================================================================
# Development Settings
# =================================================================
DEBUG=false
MOCK_DATA=false
DRY_RUN=false
LOCAL_DEVELOPMENT=true